<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.mili.housead.utilities.Utils" />

        <variable
            name="neighborhood"
            type="com.mili.housead.network.model.NeighborhoodProperty" />
    </data>

    <com.google.android.material.chip.Chip
        android:id="@+id/neighborhood_chip"
        style="@style/Widget.HouseAd.Chip.Entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{Utils.persianNumber(neighborhood.title)}" />
</layout>